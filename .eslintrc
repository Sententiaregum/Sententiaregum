{
  "rules": {
    "indent": [2, 2, { "VariableDeclarator": 2 }],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "comma-dangle": [2, "never"],
    "no-unsafe-negation": [2],
    "valid-jsdoc": [2],
    "yoda": [2, "always"],
    "eqeqeq": [2],
    "prefer-const": [2],
    "prefer-spread": [2],
    "no-confusing-arrow": [2],
    "no-var": [2],
    "object-shorthand": [2, "always"],
    "prefer-arrow-callback": [2],
    "no-else-return": [2],
    "no-eval": [2],
    "no-loop-func": [2],
    "no-new-wrappers": [2],
    "no-new": [2],
    "no-param-reassign": [2],
    "no-script-url": [2],
    "no-use-before-define": [2],
    "max-len": [2, 200],
    "no-lonely-if": [2],
    "no-new-object": [2],
    "no-global-assign": [2],
    "no-useless-concat": [2],
    "radix": [2],
    "no-iterator": [2],
    "key-spacing": [2, { "align": "value" }],
    "no-multi-str": [2],
    "no-new-func": [2],
    "no-void": [2],
    "no-useless-call": [2],
    "curly": [2],
    "no-alert": [2],
    "no-div-regex": [2],
    "guard-for-in": [2],
    "no-eq-null": [2],
    "no-floating-decimal": [2],
    "no-invalid-this": [2],
    "no-lone-blocks": [2],
    "vars-on-top": [2],
    "max-depth": [2, 10],
    "max-nested-callbacks": [2, 3],
    "max-params": [2, 10],
    "max-statements": [2, 25],
    "new-parens": [2],
    "no-array-constructor": [2],
    "func-call-spacing": [2],
    "no-trailing-spaces": [2],
    "object-curly-spacing": [2, "always"],
    "prefer-template": [2],
    "react/display-name": [0],
    "react/jsx-indent": [2, 2],
    "react/jsx-space-before-closing": [2],
    "no-constant-condition": [0],
    "arca/import-align": [2]
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },
  "extends": ["eslint:recommended", "plugin:varspacing/recommended", "plugin:react/recommended"],
  "plugins": [
    "react",
    "varspacing",
    "arca"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "classes": true
    }
  },
  "parser": "babel-eslint"
}
